{% extends 'boxed-layout.html.twig' %}

{% block title %}Forecast index{% endblock %}

{% block content %}
    <h1>Forecast index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>TempaeratureCelsius</th>
                <th>Humidity</th>
                <th>WindSpeed</th>
                <th>Pressure</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for forecast in forecasts %}
            <tr>
                <td>{{ forecast.id }}</td>
                <td>{{ forecast.tempaeratureCelsius }}</td>
                <td>{{ forecast.humidity }}</td>
                <td>{{ forecast.windSpeed }}</td>
                <td>{{ forecast.pressure }}</td>
                <td>
                    <a href="{{ path('app_forecast_show', {'id': forecast.id}) }}">show</a>
                    <a href="{{ path('app_forecast_edit', {'id': forecast.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_forecast_new') }}">Create new</a>
{% endblock %}
